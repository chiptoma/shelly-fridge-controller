{
  "$schema": "https://raw.githubusercontent.com/stryker-mutator/stryker/master/packages/core/schema/stryker-schema.json",
  "testRunner": "command",
  "commandRunner": {
    "command": "npm test -- --reporter=dot"
  },
  "mutate": [
    "src/protection.js",
    "src/control.js",
    "src/features.js"
  ],
  "ignorePatterns": [
    "dist",
    "coverage",
    "node_modules"
  ],
  "reporters": [
    "progress",
    "clear-text",
    "html"
  ],
  "htmlReporter": {
    "fileName": "reports/mutation/mutation.html"
  },
  "thresholds": {
    "high": 80,
    "low": 60,
    "break": 50
  },
  "concurrency": 2,
  "timeoutMS": 60000,
  "coverageAnalysis": "off"
}
